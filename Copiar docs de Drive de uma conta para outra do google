function copiarPastaOrigemDentroDoDestino() {
  var idPastaOrigem = 'COLE_AQUI_O_ID_DA_PASTA_ORIGEM';     // Pasta compartilhada da Conta X
  var idPastaDestino = 'COLE_AQUI_O_ID_DA_PASTA_DESTINO';   // Pasta existente na Conta Y

  var pastaOrigem = DriveApp.getFolderById(idPastaOrigem);
  var pastaDestino = DriveApp.getFolderById(idPastaDestino);

  // Cria dentro do destino uma nova pasta com o mesmo nome da origem
  var novaPasta = pastaDestino.createFolder(pastaOrigem.getName());

  copiarConteudoDaPasta(pastaOrigem, novaPasta);

  Logger.log('Pasta copiada! Estrutura: ' + pastaDestino.getName() + ' > ' + novaPasta.getName());
}

// Função recursiva que copia todos os arquivos e subpastas
function copiarConteudoDaPasta(origem, destino) {
  // Copia arquivos
  var arquivos = origem.getFiles();
  while (arquivos.hasNext()) {
    var arquivo = arquivos.next();
    arquivo.makeCopy(arquivo.getName(), destino);
  }
  // Copia subpastas recursivamente
  var subpastas = origem.getFolders();
  while (subpastas.hasNext()) {
    var subpastaOrigem = subpastas.next();
    var subpastaDestino = destino.createFolder(subpastaOrigem.getName());
    copiarConteudoDaPasta(subpastaOrigem, subpastaDestino);
  }
}
